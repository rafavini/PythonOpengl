#version 130

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

in vec3 vertexPosition;
in vec3 vnormal;

out vec3 normal;
out vec3 fPos;

void main(){
  gl_Position =   projection * view * model * vec4(vertexPosition,1.0);
  fPos = vec3(model * vec4(vertexPosition,1.0));
  normal = vnormal;
}
